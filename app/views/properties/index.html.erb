<h2>物件一覧</h2>

<table>
  <tr>
    <th class="name-cell">物件名</th>
    <th class="rent-cell">賃料</th>
    <th class="address-cell">住所</th>
    <th class="age-cell">築年数</th>
    <th class="remarks-cell">備考</th>
  </tr>
  <% @properties.each do |pro| %>
    <tr>
      <td><%= pro.name %></td>
      <td><%= pro.rent %>円</td>
      <td><%= pro.address %></td>
      <td><%= pro.age %>年</td>
      <td><%= pro.remarks %></td>
      <td class="link-cell"><%= link_to '詳細', property_path(pro.id) %></td>
      <td class="link-cell"><%= link_to '編集', edit_property_path(pro.id) %></td>
      <td class="link-cell"><%= link_to '削除', property_path(pro.id), method: :delete, data: { confirm: '本当に削除しますか？'} %></td>
    </tr>
  <% end %>
</table>

<div class="link_view">
  <%= link_to '物件を登録する', new_property_path %>
</div>
